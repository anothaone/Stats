<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto" android:layout_height="100dp" android:layout_width="fill_parent"

    android:background="#ffffff">








        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/saveNamePop"

                android:textSize="40dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/savedCard1"
                android:layout_toStartOf="@+id/savedCard1"
                android:text="test"
                android:gravity="center_vertical|center" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/savedCard1"
                android:layout_marginRight="77dp"
                android:layout_marginEnd="77dp"
                android:src="@drawable/miner"
                android:layout_marginTop="7dp"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/savedCard4"
                android:layout_toStartOf="@+id/savedCard4" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/savedCard2"
                android:src="@drawable/miner"
                android:layout_alignTop="@+id/savedCard1"
                android:layout_toRightOf="@+id/savedCard5"
                android:layout_toEndOf="@+id/savedCard5" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/savedCard3"
                android:src="@drawable/miner"
                android:layout_above="@+id/savedCard5"
                android:layout_toRightOf="@+id/savedCard2"
                android:layout_toEndOf="@+id/savedCard2" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/savedCard4"
                android:src="@drawable/miner"
                android:layout_above="@+id/savedCard5"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/savedCard5"
                android:src="@drawable/miner"
                android:layout_below="@+id/savedCard1"
                android:layout_toRightOf="@+id/saveNamePop"
                android:layout_toEndOf="@+id/saveNamePop"
                android:layout_marginTop="9dp" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/savedCard6"
                android:src="@drawable/miner"
                android:layout_alignBottom="@+id/savedCard7"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/savedCard7"
                android:src="@drawable/miner"
                android:layout_alignTop="@+id/savedCard8"
                android:layout_toRightOf="@+id/savedCard2"
                android:layout_toEndOf="@+id/savedCard2" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/savedCard8"
                android:src="@drawable/miner"
                android:layout_alignTop="@+id/savedCard5"
                android:layout_toLeftOf="@+id/savedCard7"
                android:layout_toStartOf="@+id/savedCard7" />

        </RelativeLayout>





</LinearLayout>



