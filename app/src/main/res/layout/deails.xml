<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:id="@+id/characterImage"
        android:src="@drawable/miner"

        android:layout_gravity="center_vertical" />


    <GridView
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:id="@+id/grid"
        android:numColumns="2"

        android:verticalSpacing="20dp"
        android:stretchMode="columnWidth"
        android:columnWidth="200dp"
        android:foregroundGravity="left|center_vertical"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"
        android:gravity="left"
        android:horizontalSpacing="50dp"
        android:background="@color/accent_material_dark"
        android:clickable="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </GridView>


    <RelativeLayout
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:columnCount="6"
        android:rowCount="3"
        android:orientation="vertical"
        android:background="@drawable/round_grid"

        android:clickable="false"
        android:columnOrderPreserved="false"
        android:useDefaultMargins="false"
        android:padding="0dp"
        android:id="@+id/gridLayout"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp">


        <TextView
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Rarity:"

            android:id="@+id/textView7"
            android:layout_row="0"
            android:layout_column="0"
            android:gravity="center"
            android:layout_above="@+id/textView10"
            android:layout_alignRight="@+id/textView8"
            android:layout_alignEnd="@+id/textView8" />

        <TextView
            android:layout_width="82dp"
            android:layout_height="27dp"
            android:textAppearance="?android:attr/textAppearanceSmall"

            android:text="Type:"
            android:id="@+id/textView8"
            android:layout_row="0"
            android:layout_column="1"
            android:gravity="center"
            android:layout_below="@+id/textView9"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="82dp"
            android:layout_height="27dp"

            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Legendary"
            android:id="@+id/textView10"
            android:layout_row="2"
            android:layout_column="0"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/textView9"
            android:layout_alignStart="@+id/textView9" />

        <TextView
            android:layout_width="82dp"
            android:layout_height="27dp"

            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Troop"
            android:id="@+id/textView9"
            android:layout_row="2"
            android:layout_column="1"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="19dp"
            android:layout_marginEnd="19dp" />
    </RelativeLayout>

    <Spinner
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:id="@+id/levelSpinner"


        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/characterImage"
        android:layout_toEndOf="@+id/characterImage" />


</RelativeLayout>