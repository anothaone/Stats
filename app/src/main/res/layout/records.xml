
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="match_parent">



<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="210dp"
    android:layout_height="220dp"
    android:layout_gravity="center"
    android:background="@drawable/cardboarder"
    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/bottom_gray_border" >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <Spinner
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/spinner2"
                android:layout_marginTop="42dp"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/spinner3"
                android:spinnerMode="dialog" />

            <Spinner
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/spinner"
                android:layout_alignTop="@+id/spinner3"
                android:layout_toRightOf="@+id/spinner3"
                android:layout_toEndOf="@+id/spinner3"
                android:spinnerMode="dropdown" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Wins"
                android:id="@+id/textView2"
                android:layout_above="@+id/spinner3"
                android:layout_alignLeft="@+id/spinner2"
                android:layout_alignStart="@+id/spinner2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Wins"
                android:id="@+id/textView"
                android:layout_alignTop="@+id/textView3"
                android:layout_alignRight="@+id/spinner"
                android:layout_alignEnd="@+id/spinner" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Wins"
                android:id="@+id/textView3"
                android:layout_alignTop="@+id/textView2"
                android:layout_toLeftOf="@+id/textView"
                android:layout_toStartOf="@+id/textView" />

            <Spinner
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/spinner3"
                android:layout_alignTop="@+id/spinner2"
                android:layout_centerHorizontal="true"
                android:spinnerMode="dialog" />

        </RelativeLayout>



    </RelativeLayout>




</android.support.v7.widget.CardView>



</LinearLayout>