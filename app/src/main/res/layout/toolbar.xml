<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    android:layout_width="fill_parent"
    android:layout_height="?attr/actionBarSize"
    android:minHeight="?attr/actionBarSize"
    local:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"

    android:background="@drawable/wood2"
    app:title="some title">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Random Deck"
        android:layout_gravity="center"
        android:id="@+id/toolbar_title"
        android:textSize="20sp"
        android:textColor="@android:color/black"

        android:textIsSelectable="false"
        android:layout_marginRight="19dp"
        android:layout_marginEnd="19dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/averageElixir"
        android:layout_toStartOf="@+id/averageElixir" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView"

        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp"
        android:src="@drawable/elixir"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:id="@+id/averageElixir"
        android:text="Average Elixir Cost: 4.0"
        android:textSize="15sp"
        android:layout_toLeftOf="@+id/imageView"
        android:layout_toStartOf="@+id/imageView"
        android:layout_alignTop="@+id/imageView"
        android:gravity="bottom"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/imageView" />


</RelativeLayout>




    </android.support.v7.widget.Toolbar>